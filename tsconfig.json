{
  "compilerOptions": {
    "baseUrl": "./src", // baseUrl set to "src" directory
    "paths": {
      "@components/*": ["components/*"], // Alias for components
      "@lib/*": ["lib/*"] // Alias for lib folder
    },
    "module": "esnext", // Needed for dynamic imports
    "jsx": "react-jsx",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
